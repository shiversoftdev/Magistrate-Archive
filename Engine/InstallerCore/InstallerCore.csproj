  <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
    <Exec Condition=" '$(OS)' != 'Unix' " Command="copy /y $(ProjectDir)CheckTemplate.cs $(SolutionDir)_build\CheckTemplate.cs" />
